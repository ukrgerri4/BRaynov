{
  "ConnectionStrings": {
    "SqlightConnection": "Data Source=BRaynov.db"
  },
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Default": "Information",
        "System": "Information",
        "Microsoft": "Information"
      }
    },
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "theme": "Serilog.Sinks.SystemConsole.Themes.AnsiConsoleTheme::Code, Serilog.Sinks.Console",
          "restrictedToMinimumLevel": "Debug"
        }
      },
      {
        "Name": "File",
        "Args": {
          "path": "Logs/log.txt",
          "rollingInterval": "Day",
          "restrictedToMinimumLevel": "Warning"
        }
      }
    ]
  },
  "Cors": {
    "Origins": [
      "http://localhost:5000",
      "https://localhost:5001"
    ]
  },
  "Jwt": {
    "Issuer": "http://localhost",
    "Audience": "http://localhost",
    "ExpirationMinutes": "600",
    "RefreshTokenExpirationMinutes": "1200"
  }
}
