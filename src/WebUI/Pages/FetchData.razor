@page "/fetchdata"
@using Application.Logic.Books.Queries.GetAllBooks
@inject HttpClient Http
@inject IConfiguration Configuration

<h1>Weather forecast</h1>

<p>This component demonstrates fetching data from the server.</p>

@if (responseViewModel?.Books == null)
{
    <p><em>Loading...</em></p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Date</th>
                <th>Temp. (C)</th>
                <th>Temp. (F)</th>
                <th>Summary</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var book in responseViewModel.Books)
            {
                <tr>
                    <td>@book.Name</td>
                </tr>
            }
        </tbody>
    </table>
}

@code {
    private GetAllBooksViewModel responseViewModel;

    protected override async Task OnInitializedAsync()
    {
        responseViewModel = await Http.GetFromJsonAsync<GetAllBooksViewModel>("api/books/select");
    }
}
